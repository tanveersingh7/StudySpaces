                    android:id="@+id/lightLevelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="Light Level"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/lightLevelValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 8"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

                android:id="@+id/ninthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/wifiTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="Wi Fi"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/wifiValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 9"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

                android:id="@+id/tenthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/waterfountainTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="Water Fountain Nearby"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/waterfountainValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 10"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

