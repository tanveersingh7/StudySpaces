                    android:id="@+id/noiseLevelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="Noise Level"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/noiseLevelValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 6"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

                android:id="@+id/seventhRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/networkSpeedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="Network Speed"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/networkSpeedValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 7"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

                android:id="@+id/eighthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
