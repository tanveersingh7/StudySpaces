<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umn_maroon"
    tools:context=".space.fragments.AddPhoto">

    <Button
        android:id="@+id/submit_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="SUBMIT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <ImageView
        android:id="@+id/add_photo_view"
        android:layout_width="257dp"
        android:layout_height="301dp"
        android:layout_marginTop="28dp"
        android:background="@color/transparent_background"
        app:layout_constraintBottom_toTopOf="@+id/submit_photo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <Button
        android:id="@+id/add_photo_button"
        android:layout_width="92dp"
        android:layout_height="88dp"
        android:background="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/add_photo_view"
        app:layout_constraintEnd_toEndOf="@+id/add_photo_view"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/add_photo_view"
        app:layout_constraintTop_toTopOf="@+id/add_photo_view"
        app:layout_constraintVertical_bias="0.497" />

    <EditText
        android:id="@+id/Input_PhotoDescription"
        android:layout_width="294dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Photo description (Optional)"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/submit_photo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_photo_view" />

</androidx.constraintlayout.widget.ConstraintLayout>