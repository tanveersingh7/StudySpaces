<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/umn_maroon"
    tools:context=".Landing">

    <Button
        android:id="@+id/login"
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/roundedbutton"
        android:textColor="@color/black"
        android:text="NEW USER"
        android:onClick="goToNewUserActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="RETURNING USER"
        android:textColor="@color/black"
        android:background="@drawable/roundedbutton"
        android:onClick="gotToLogin"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="837dp"
        android:layout_height="557dp"

        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/register_button"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:srcCompat="@mipmap/logo_large" />

</androidx.constraintlayout.widget.ConstraintLayout>