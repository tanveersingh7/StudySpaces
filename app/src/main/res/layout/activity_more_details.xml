                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/coffeeshopValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 13"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

                android:id="@+id/fourteenthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/whiteboardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="White Board"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/whiteboardValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 14"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow

                android:id="@+id/fifteenthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/bigscreenTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/umn_gold"
                    android:padding="10dip"
                    android:text="Display Screen"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/bigscreenValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dip"
                    android:text="Text 15"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </TableRow>


        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>